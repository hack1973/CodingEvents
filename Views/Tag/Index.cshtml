@model List<CodingEvents.Models.Tag>

<h1>All Event Tags</h1>

<p>
    <a asp-controller="Tag" asp-action="Add">Add Tag</a>
</p>

@if (Model.Count == 0)
{
    <p>No Tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Tag Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
            </tr>
        }
    </table>
}