@using CodingEvents.Models;
@model List<Event>

<h1>Delete Event</h1>

<p>
    <a asp-controller="Events" asp-action="Index">CodingEvents Home</a>
</p>

<form method="post" asp-controller="Events" asp-action="Delete">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Contact Email</th>
            <th>Category</th>
        </tr>

        @foreach (var meeting in Model)
        {
            <tr>
                <td>@meeting.Id</td>
                <td>@meeting.Name</td>
                <td>@meeting.Description</td>
                <td>@meeting.ContactEmail</td>
                <td>@meeting.Category.Name</td>
                <td><input type="checkbox" name="eventIds" value="@meeting.Id" class="form-control"></td>
            </tr>

        }
    </table>
    <input type="submit" value="Delete Selected Events" class="btn btn-danger">
</form>