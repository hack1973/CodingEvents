<h1>Delete Event</h1>

<form method="post">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        @foreach (var meeting in ViewBag.events)
         { 
            <tr>
                <td>@meeting.Id</td>
                <td>@meeting.Name</td>
                <td>@meeting.Description</td>
                <td><input type="checkbox" name="eventIds" value="@meeting.Id" class="form-control"></td>
            </tr>            
         }
    </table>
    <input type="submit" value="Delete Selected Events" class="btn btn-danger">
</form>